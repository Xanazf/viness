{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "./.dist/backend",
    "rootDir": "./backend/src",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "backend/src/**/*"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
